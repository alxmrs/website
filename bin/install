#!/bin/sh
#
# Install pandoc on debian.
#

curl -O -L -C - https://github.com/jgm/pandoc/releases/download/2.19.2/pandoc-2.19.2-1-arm64.deb
sudo dpkg -i pandoc-2.19.2-1-arm64.deb
rm pandoc-2.19.2-1-arm64.deb

#
# Install pandoc-rss on debian.
#
git clone https://github.com/chambln/pandoc-rss.git rss
cd rss || exit 2
sudo make install
