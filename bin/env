#!/bin/sh
#
# Environment variables, with defaults.
#
ROOT=$(dirname "$(dirname "$(realpath "$0")")")
SRC=${SRC:-"$ROOT/src"}
DST=${DST:-"$ROOT/public"}
STATIC=${STATIC:-"$SRC/static"}
HEADER=${HEADER:-"$SRC/header.html"}
FOOTER=${FOOTER:-"$SRC/footer.html"}
CSS=${CSS:-"/css/main.css"}
SRC_EXT=${SRC_EXT:-"md"}
DST_EXT=${DST_EXT:-"html"}
PANOPTS=${PANOPTS:-"--css $CSS --email-obfuscation=javascript --metadata-file=$ROOT/defaults.yml -f gfm+raw_html -t html -B $HEADER -A $FOOTER"}