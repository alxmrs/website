#!/usr/bin/env sh
#
# Environment variables, with defaults.
#
ROOT=$(dirname "$(dirname "$(realpath "$0")")")
SRC=${SRC:-"$ROOT/src"}
DST=${DST:-"$ROOT/public"}
ASSETS=${ASSETS:="$ROOT/assets"}
HEADER=${HEADER:-"$ROOT/template/header.html"}
FOOTER=${FOOTER:-"$ROOT/template/footer.html"}
CSS=${CSS:-"/assets/css/main.css"}
SRC_EXT=${SRC_EXT:-"md"}
DST_EXT=${DST_EXT:-"html"}
PANOPTS=${PANOPTS:-"--css $CSS --metadata-file=$ROOT/defaults.yml  --filter $ROOT/bin/relink.py -f gfm+raw_html -t html -B $HEADER -A $FOOTER" -V lang=en-US}